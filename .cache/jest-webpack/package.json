{
  "name": "melody-template",
  "version": "0.1.0",
  "description": "Melody starter template",
  "main": "src/index.js",
  "repository": "https://github.com/trivago/melody-template",
  "author": "trivago",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "webpack --progress --colors --display-chunks",
    "test": "jest",
    "tdd": "jest --watchAll",
    "test:test": "jest-webpack"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  },
  "dependencies": {
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0",
    "jest-webpack": "^0.5.1",
    "melody-compiler": "^1.2.0-0",
    "melody-component": "^1.0.0",
    "melody-hoc": "^1.0.0",
    "melody-idom": "^1.0.0",
    "melody-loader": "^1.0.0",
    "melody-parser": "^1.0.0",
    "melody-plugin-idom": "^1.0.0",
    "melody-snapshot-serializer": "../melody/packages/melody-snapshot-serializer/",
    "melody-test-utils": "../melody/packages/melody-test-utils/",
    "melody-traverse": "^1.0.0",
    "melody-types": "^1.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      ".+\\.js?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js$",
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**"
    ]
  },
  "babel": {
    "plugins": [
      "babel-plugin-transform-object-rest-spread"
    ],
    "presets": [
      "babel-preset-env"
    ]
  }
}
